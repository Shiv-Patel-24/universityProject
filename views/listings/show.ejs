<% layout("layouts/boilerplate.ejs" ) %>
<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3>Listing Details</h3>
</div>

    <div class="card col-6 offset-3 show-card ">
      <img class="img-fluid" 
        src="<%= listing.image %>"
        class="card-img-top show-img"
        alt="listing_image"
      />
      <div class="card-body">
        <p class="card-text">
            <b><%= listing.title %></b><br>
            <%= listing.description %> <br>
            &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
            <%= listing.location %> <br>
            <%= listing.country %>
        </p>
      </div><br>
      <div class="button-container">
        <button type="button" class="btn btn-primary w-22">+ &#8377;50</button>
        <button type="button" class="btn btn-secondary w-22">+ &#8377;100</button>
        <button type="button" class="btn btn-success w-22">+ &#8377;200</button>
      </div>
    </div>

<!--     commenting because Now i have used up using bootstrap 

    <ul>
      <li><%= listing.title %></li>
      <li><%= listing.description %></li>
      <li>&#8377; <%= listing.price.toLocaleString("en-IN") %></li>
      <li><%= listing.location %></li>
      <li><%= listing.country %></li>
    </ul> -->
    <br />

    <div class="btns">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit </a>
        
            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-dark offset-5">Delete</button>
            </form>
    </div>
    <div class="giving-height">

    </div>
    <hr class="col-9 offset-1"><br>
    <div class="col-6 offset-3">
      <form action="">
        <label for="review" class="form-control mb-3">Review</label>
        <input type="range" class="form-label col-10" min="1" max="5" step="1" id="review"><br>

        <textarea name="comment" class=" col-6 form-control" id="comment" rows="5" cols="15" placeholder="comment here"></textarea>
        <br>
        <button class="btn btn-dark">Submit</button>
      </form>
      <br>
    </div>

</div>
  